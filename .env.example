# Bot Configuration
BOT_TOKEN=your_bot_token_from_botfather
WEBHOOK_URL=https://yourdomain.com/webhook.php
TIMEZONE=UTC

# Database Configuration (MySQL - Primary)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=telegram_channel_bot
DB_USERNAME=root
DB_PASSWORD=

# Database Configuration (SQLite - Optional)
# DB_CONNECTION=sqlite
# DB_PATH=storage/database.sqlite

# Application Settings
APP_ENV=production
APP_DEBUG=false
LOG_LEVEL=info
LOG_CHANNEL_ID=

# Rate Limiting
RATE_LIMIT_ACTIONS=30
RATE_LIMIT_WINDOW=60

# Admins (comma-separated Telegram user IDs)
ADMIN_IDS=

# Proxy (if needed for Telegram API)
HTTP_PROXY=

# Session Configuration
SESSION_LIFETIME=3600

# Cache Configuration
CACHE_DRIVER=file

# Subscription & Monetization
ENABLE_SUBSCRIPTIONS=false
STRIPE_KEY=
STRIPE_SECRET=

# AI Features (Optional)
ENABLE_AI_FEATURES=false
OPENAI_API_KEY=

# External Integrations
ENABLE_RSS=true
RSS_CHECK_INTERVAL=3600

# Security
WEBHOOK_SECRET=
ENABLE_IP_WHITELIST=false
ALLOWED_IPS=

# Performance
MAX_CHANNELS_PER_USER=100
MAX_POSTS_PER_DAY=1000
MAX_SCHEDULED_POSTS=500
